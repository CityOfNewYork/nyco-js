{
  "name": "@nycopportunity/patterns-framework",
  "version": "0.0.21",
  "description": "Front-end utilities from the Mayor's Office for Economic Opportunity",
  "main": "scripts/cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfNewYork/nyco-patterns-framework.git"
  },
  "author": "NYC Opportunity<products@nycopportunity.nyc.gov>",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/CityOfNewYork/nyco-patterns-framework/issues"
  },
  "homepage": "https://github.com/CityOfNewYork/nyco-patterns-framework#readme",
  "dependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "ajv": "^6.10.2",
    "concurrently": "^4.1.2",
    "core-js": "^3.4.8",
    "cross-env": "^5.2.1",
    "directory-tree": "^2.2.4",
    "escape-html": "^1.0.3",
    "eslint": "^6.7.2",
    "express": "^4.16.3",
    "gh-pages": "^2.1.1",
    "json-to-scss": "^1.4.0",
    "markdown": "^0.5.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "postcss": "^7.0.24",
    "prettier": "^1.19.1",
    "reload": "^3.0.3",
    "rollup": "^1.27.9",
    "shelljs": "^0.8.3",
    "slm": "^2.0.0",
    "stylelint": "^10.1.0",
    "svgo": "^1.3.2",
    "svgstore-cli": "^1.3.1",
    "uglify-js": "^3.7.2"
  },
  "optionalDependencies": {
    "autoprefixer": "^9.6.1",
    "chalk": "^2.4.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint-config-google": "^0.13.0",
    "node-emoji": "^1.10.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "stylelint-config-standard": "^18.2.0",
    "tailwindcss": "^1.0.5"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development cross-env PORT=7070 concurrently \"scripts/default.js -w\" \"scripts/serve.js -w\" -p \"none\"",
    "default": "cross-env NODE_ENV=production scripts/default.js",
    "version": "npm run default && git add .",
    "prepublishOnly": "git push && git push --tags",
    "publish": "cross-env NODE_ENV=production scripts/publish.js"
  },
  "bin": {
    "pttrn": "scripts/cli.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "false",
          "useBuiltIns": "entry",
          "corejs": 3
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 1,
      "one-var": 0,
      "comma-dangle": 0,
      "curly": [
        "error",
        "multi"
      ]
    }
  },
  "stylelintConfig": {
    "extends": "stylelint-config-standard",
    "rules": {
      "comment-whitespace-inside": null,
      "no-missing-end-of-source-newline": null,
      "at-rule-empty-line-before": null,
      "number-leading-zero": "never",
      "selector-pseudo-element-colon-notation": null
    }
  }
}
